{
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "release_date": {
            "type": "string",
            "pattern": "^[0-9]{4}/[0-9]{2}/[0-9]{2}$"
        },
        "affiliation": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "language": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "domain": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "paper/news": {
            "type": "string"
        },
        "parameters_dense": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "^~?[0-9]+(\\.[0-9]+)?B$"
            }
        },
        "parameters_MoE": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "^~?[0-9]+(\\.[0-9]+)?B$"
            }
        },
        "model": {
            "type": "string"
        },
        "code": {
            "type": "string"
        },
        "api": {
            "type": "string"
        }
    },
    "required": [
        "name",
        "release_date",
        "affiliation",
        "paper/news",
        "domain"
    ],
    "anyOf": [
        {
            "required": [
                "parameters_dense"
            ]
        },
        {
            "required": [
                "parameters_MoE"
            ]
        }
    ],
    "if": {
        "properties": {
            "domain": {
                "contains": {
                    "const": "Text"
                }
            }
        }
    },
    "then": {
        "required": [
            "language"
        ]
    },
    "else": {
        "properties": {
            "domain": {
                "contains": {
                    "anyOf": [
                        {"const": "Vision"},
                        {"const": "Audio"},
                        {"const": "Code"}
                    ]
                }
            }
        }
    }
}